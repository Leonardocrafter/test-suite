<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="craftercms - Studio Sites TestSuite"
	preserve-order="true" verbose="3">
	<test name="Create Site Using Empty Blueprint">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.CreateSiteEmptyTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test name="Delete Site Test">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.CreateSiteEmptyTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test name="Design Of Create Site Page Test">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.CreateSiteEmptyTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DesignOfCreateSitePageTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
		name="Verify that the application show the sites page complete with or without sites created. (logos, titles, all links, buttons)">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifySitesPageWithSitesAndWithoutSitesTest" />
		</classes>
	</test>
	<test
		name="Verify that the application allows to create a site with each blueprints availables">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateSitesWithEachBlueprintTest" />
		</classes>
	</test>
	<test
		name="Verify that the application shows each validations of the fields for the create site process">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioShowEachValidationOfFieldsForCreateSiteTest" />
		</classes>
	</test>
	<test
		name="Verify that the application allows to cancel the create site process">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.CancelCreateSiteProcessTest" />
		</classes>
	</test>
	<test name="Verify that the application allows to delete the site created">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToDeleteASiteCreatedTest" />
		</classes>
	</test>
	<test
		name="Verify that the application allows to filter the number of sites displayed per page">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToFilterNumberOfSitesPerPage" />
		</classes>
	</test>
	<test name="Verify that the pagination on the sites list works properly">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyThatPaginationOfSiteListWorksProperlyTest" />
		</classes>
	</test>
	<test
		name="Verify that the application allows to go to the preview page for a site when Preview link is clicked">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToGoToPreviewPageWhenClickOnPreviewLinkTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
		name="Verify that the application allows to go to the dashboard page for a site when Dashboard link is clicked">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToGoToDashboardPageWhenClickOnDashboardLinkTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
		name="Verify that application allows to create a site based on a blueprint then push to remote git repository">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateSiteBasedOnBluePrintThenPushToRemoteGitRepoTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
		name="Verify that the application allows to create a site based on a remote git repository -Authentication type: none">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateASiteBasedOnARemoteGitRepositoryWithNoneAuthenticationTypeTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
		name="Verify that the application allows to create a site based on a remote git repository -Authentication type: basic">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateASiteBasedOnARemoteGitRepositoryWithBasicAuthenticationTypeTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
		name="Verify that the application allows to create a site based on a remote git repository -Authentication type: token">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateASiteBasedOnARemoteGitRepositoryWithTokenAuthenticationTypeTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
		name="Verify that the application allows to create a site based on a remote git repository -Authentication type: private key on local repository">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateASiteBasedOnARemoteGitRepositoryWithPrivateKeyAuthenticationTypeOnLocalRepositoryTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
	name="Automate verification that the application allows to create a site with Link to upstream remote git repository (git, gitlab) -Authentication type: Remote Git Repository Private Key">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateASiteWithLinkToUpstreamRemoteGitRepoWithPrivateKeyAuthenticationTypeTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
	name="Automate verification of create site after a failed create site with link to upstream remote git repository (With Basic Auth)">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateASiteAfterAFailedCreateSiteWithLinkUpstreanRemoteGitRepoWithBasicAuthTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
	<test
	name="Automate verification of create site with link to upstream remote bitbucket repository (With Basic Auth)">
		<classes>
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.VerifyStudioAllowsToCreateASiteWithLinkUpstreanRemoteBitBucketRepoWithBasicAuthTest" />
			<class
				name="org.craftercms.studio.test.cases.sitestestcases.DeleteSiteTest" />
		</classes>
	</test>
</suite> <!-- Suite -->